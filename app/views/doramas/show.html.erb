<div class="detail">
  <div class="info">
    <span class="title"><%= @dorama.title %></span><br>
    <span class="date"><%= @dorama.date %></span>
    <span class="time"><%= @dorama.time %></span>
  </div>
  <div class="img"><%= image_tag @dorama.image %></div>

  <div class="tweet_button">
    <%= link_to 'ツイートをみる', dorama_tweets_path(@dorama) %><br>
    <span class="tweet_number"><%= @dorama.tweet_number %>件</span>
  </div>

  <div class="tab-contents">
    <input type="radio" id="tab1" name="tab" checked >
    <label for="tab1">Story</label>
    <input type="radio" id="tab2" name="tab">
    <label for="tab2">Cast</label>
    <div class="tab-box">
      <div id="tabView1">
        <div class="story"><%= @dorama.story %></div>
      </div>
      <div id="tabView2">
        <ul class="tweet_cast">
          <% @dorama.casts.each do |cast| %>
          <li>
            <%= cast.name %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>